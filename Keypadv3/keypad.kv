<Keypad>
    BoxLayout:
        orientation: 'vertical'
        size_hint: None,None
        width: root.width
        height: root.height
        spacing: 3
        padding: 0
        id: main_window
        BoxLayout:
            size_hint: 1,1
            id: display_window
            width: root.width
            height: 50
            Label:
                size_hint: 1,1
                id: display_label
                width: root.width
#                height: 50
                color: 'black'
        GridLayout:
            size_hint: 1,4
            rows: 4
            cols: 3
            width: root.width
#            height: 50
            id: keypad_window
            Button:
                id: 1_button
                size_hint: 1,1
                text: '1'
#                height: 30
#                width: 30
                always_release: True
                on_release: root.PressButton(self)
