<CameraControl>
    BoxLayout:
        orientation: 'vertical'
        size_hint: None,None
        width: root.width
        height: root.height
        spacing: 3
        padding: 0
        id: main_window
        BoxLayout:
            size_hint: 1,5
            id: cam_window
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1,1
            width: root.width
#            height: 90
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        text: 'Pan/Tilt:'
                        color: 'black'
                        size_hint: (.5,1)
                    Slider:
                        id: pantiltslider
                        min: 1
                        max: 50
                        value: 5
                        step: 1
                        orientation: 'horizontal'
                        cursor_size: (20,20)
                        sensitivity: 'handle'
                        on_value: root.change_pantilt_step_size()
                        size_hint: (1,1)
                BoxLayout:
                    id: select_layout
                Button:
                    id: preset_button
                    text: "Preset"
                    size_hint: 1,1
#                    height: 30
            GridLayout:
                rows: 3
                cols: 3
                size_hint:1,1
                width: root.width
                spacing: 0
                padding: 0
                Label:
                Button:
                    id: up_button
                    text: 'up'
#                    height: self.parent.height/3
                    size_hint: 1,1
                    always_release: True
#                    on_release: root.tiltup()
                    on_press: root.tilt_up_on()
                    on_release: root.tilt_up_off()
                Label:
                Button:
                    id: left_button
                    text: 'Left'
#                    height: self.parent.height/3
                    size_hint: 1,1
                    always_release: True
                    on_press: root.pan_left_on()
                    on_release: root.pan_left_off()

                Label:
                Button:
                    id: right_button
                    text: 'Right'
#                    height: self.parent.height/3
                    size_hint: 1,1
                    always_release: True
                    on_press: root.pan_right_on()
                    on_release: root.pan_right_off()
                Label:
                Button:
                    id: down_button
                    text: 'Down'
#                    height: self.parent.height/3
                    size_hint: 1,1
                    always_release: True
#                    on_release: root.tiltdown()
                    on_press: root.tilt_down_on()
                    on_release: root.tilt_down_off()
                Label:
            BoxLayout:
                orientation: 'vertical'
                size_hint: 1,1
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        text: 'Zoom:'
                        color: 'black'
                        size_hint: (.5,1)
                    Slider:
                        id: zoomslider
                        min: 10
                        max: 1000
                        step: 10
                        value: 100
                        orientation: 'horizontal'
                        cursor_size: (20,20)
                        sensitivity: 'handle'
                        on_value: root.change_zoom_step_size()
                        size_hint: (1,1)
                BoxLayout:
                    orientation: 'horizontal'
                    Button:
                        id: zoom_in_button
                        text: 'In'
#                        height: 30
                        size_hint: 1,1
                        always_release: True
                        on_press: root.zoom_in_on()
                        on_release: root.zoom_in_off()
                    Button:
                        id: zoom_out_button
                        text: 'Out'
#                        height: 30
                        size_hint: 1,1
                        always_release: True
                        on_press: root.zoom_out_on()
                        on_release: root.zoom_out_off()
                Button:
                    id: privacy_button
                    text: "Privacy"
                    size_hint: 1,1
#                    height: 30
                    on_release: root.toggle_privacy()
