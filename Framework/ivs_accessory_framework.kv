			Label:
				id: display_date
				size_hint: 1,.25
				font_size: '15sp'
				color: utils.get_color_from_hex('#626262')
				valign: 'top'
			Label:
				id: feedback
				color: 0,0,0,1
				size_hint: 1,.75
				halign: 'center'
				text_size: self.width, None
				font_size: '15sp'
                height: self.texture_size[1]
			Label:
				id: display_room_name
				size_hint: 1,1
				color: utils.get_color_from_hex('#626262')
				font_size: '20sp'
                text_size: self.width,self.height
                halign: "center"
                shorten: True
                shorten_from: "right"
			Label:
				size_hint: 1,.25
				id: recording_time
				color: 1,0,0,1			
			BoxLayout:
				size_hint: 1,1
				id: recording_layout
				spacing: 0
				padding: 0
			BoxLayout:
				size_hint: 1,1
				id: privacy_layout
			BoxLayout:
				size_hint: 1,1
				id: settings_layout
				spacing: 4
				padding: 2
				ImageButton:
					size_hint: 1,1
#					size_hint: None, None
#					width:141
#					height:70
					source: app.imagepath + 'config.png'
					upimage: app.imagepath + 'config.png'
					downimage: app.imagepath + 'config_down.png'
					always_release: True
					on_release: app.open_auth()
				ImageButton:
					size_hint: .765,1
#					width:108
#					height:70
#					size_hint: None, None
					source: app.imagepath + 'about.png'
					upimage: app.imagepath + 'about.png'
					downimage: app.imagepath + 'about_down.png'
					always_release: True
					on_release: app.getnetworkinfo()

<AboutScreen>:
#	BoxLayout:
#		orientation: 'horizontal'
#		size_hint: 1,1
#		Label:
#			size_hint: .25,1
    BoxLayout:
        size_hint: 1,1
        orientation: 'vertical'
        spacing: 5
        padding: 10
        HeaderLabel:
            text: "Network Information"
            size_hint: 1,None
            height: 50
        BackgroundScrollView:
            size_hint: 1,None
            height:self.parent.height-240
            background_color: utils.get_color_from_hex('#D4D6D9')
            #bar_pos_y: "right"
            #do_scroll: True
            #do_scroll_y: True
            BoxLayout:
                orientation: 'vertical'
                id: network_info_layout
                height: self.minimum_height
                size_hint: 1,None
                spacing: 10
                padding: 20
        HeaderLabel:
            text: "System Information"
            size_hint: 1,None
            height: 50
        StandardGridLayout:
            row_default_height:30
            size_hint: 1,None
            cols: 2
            spacing: 10
            padding: 20
            height: 30
            StandardTextLabel:
                text: "Version:"
                size_hint_x: None
                width: 100
                font_size: 15
            DisabledTextInput:
                id: firmware
                text: "Not Available"
                font_size: 15
        Button:
            text: 'Done'
            height: 30
            size_hint: 1,None
            on_release: app.go_to_home_screen()
