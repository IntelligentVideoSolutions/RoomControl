#			size_hint: .25,1

<SettingPassword>:
    PasswordLabel:
        text: (lambda x: '*'*x)(len(root.value)) if root.value else ''
        pos: root.pos
        font_size: '15sp'
    Button:
        on_release: app.open_settings()

<SettingButton>:
    on_release:
        app.process_settings_button(root.key)

<SettingSidebarLabel>:
# Override to change selection color to IVS Orange
    canvas.before:
        Color:
            rgba: 255 / 255., 122 / 255., 43 / 255., int(self.selected)
        Rectangle:
            pos: self.pos
            size: self.size

<SettingItem>:
# Override to change selection color to IVS Orange
    canvas:
        Color:
            rgba:  255 / 255., 122 / 255., 43 / 255., self.selected_alpha
        Rectangle:
            pos: self.x, self.y + 1
            size: self.size
        Color:
            rgb: .2, .2, .2
        Rectangle:
            pos: self.x, self.y - 2
            size: self.width, 1

