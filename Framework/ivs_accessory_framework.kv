#:import utils kivy.utils
<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
# Now you can simply Mix the `BackgroundColor` class with almost
# any other widget... to give it a background.
<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 0

<BackgroundBoxLayout@BoxLayout>
#	background_color: utils.get_color_from_hex('#F4F6F9')
	background_color: 0, 0, 0, 0
	canvas.before:
		Color:
			rgba: self.background_color
		Rectangle:
			pos: self.pos
			size: self.size

<BackgroundGridLayout@GridLayout>
	background_color: 0, 0, 0, 0
	canvas.before:
		Color:
			rgba: self.background_color
		Rectangle:
			pos: self.pos
			size: self.size

<BackgroundScrollView@ScrollView>
	background_color: 0, 0, 0, 0
	canvas.before:
		Color:
			rgba: self.background_color
#			rgb: utils.get_color_from_hex('#D4D4D4')
		Rectangle:
			pos: self.pos
			size: self.size			
<ActiveLabel@BackgroundLabel>
	background_color: 1,.8,.8,1	
	color: .4,.4,.4,1
<LeftAlignLabel@Label>
	text_size: self.size
	halign: 'left'
<StandardTextLabel@LeftAlignLabel>
	#size_hint: .25,None
	color: utils.get_color_from_hex('#626262')
#	font_size: 15
	height: 30
<NetworkTextLabel@StandardTextLabel>
	size_hint: None,None
	width: 200
<StandardTextInput@TextInput>
	size_hint: 1,None
	height: 30
	width: 300
	write_tab: False
	multiline: False
<StandardPassword@StandardTextInput>
	size_hint: 1,None
	height: 30
	width: 300
	write_tab: False
	multiline: False
	password: True
<DisabledTextInput@StandardTextInput>
	disabled: True
<HeaderLabel@Label>
	color: utils.get_color_from_hex('#626262')
#	font_size: 18
	font_size: '15sp'
	height: 50
<StandardGridLayout@GridLayout>
	height: self.minimum_height
<ErrorLabel@Label>
	color: 1,0,0,1
	font_size: '12sp'
	text_size: self.size
	valign: 'top'
	size_hint: None, None
	height:30
	
<LandscapeHome>:
	BoxLayout:
		orientation: 'horizontal'
		size_hint: 1,1
		width: root.width
		height: root.height		
		spacing: 3
		padding: 0
		BackgroundBoxLayout:
			id: app_window
			orientation: 'vertical'
			background_color: utils.get_color_from_hex('#F4F6F9')
			spacing: 10
			padding: 10
			size_hint: 3,1
#			size_hint: None,1
#			width: 600
