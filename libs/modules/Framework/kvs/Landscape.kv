#: include libs/kvs/RoundedShadowButton.kv

<LandscapeHome>:
	BoxLayout:
		orientation: 'horizontal'
		size_hint: 1,1
		width: root.width
		height: root.height
		spacing: 3
		padding: 0
		BackgroundBoxLayout:
			id: app_window
			orientation: 'vertical'
			background_color: utils.get_color_from_hex('#F4F6F9')
			spacing: 10
			padding: 10
			size_hint: 3,1
#			size_hint: None,1
#			width: 600
		BackgroundBoxLayout:
			size_hint: 1,1
#			size_hint: None,1
#			width: 200
			id: sys_window
			orientation: 'vertical'
			spacing: 10
			padding: 10
			background_color: utils.get_color_from_hex('#F4F6F9')
			Image:
				size_hint: 1,2.5
#                size_hint: None, None
#                height: 133
#                width: 163
#                halign: 'center'
#                valign: 'center'
                fit_mode: 'contain'
				source: app.imagepath + 'ivslogo.png'
			Label:
				size_hint: 1,.5
			Label:
				id: display_clock
				size_hint: 1,1
				font_size: '50sp'
				valign: 'bottom'
				color: utils.get_color_from_hex('#28282D')
			Label:
				id: display_date
				size_hint: 1,.25
				font_size: '20sp'
				color: utils.get_color_from_hex('#626262')
				valign: 'top'
			Label:
				id: feedback
				color: 0,0,0,1
				size_hint: 1,.75
				halign: 'center'
				text_size: self.width, None
				font_size: '30sp'
                height: self.texture_size[1]
			Label:
				id: display_room_name
				size_hint: 1,1
				color: utils.get_color_from_hex('#626262')
				font_size: '30sp'
                text_size: self.width,self.height
                halign: "center"
                shorten: True
                shorten_from: "right"
			Label:
				size_hint: 1,.25
				id: recording_time
				color: 1,0,0,1
			BoxLayout:
				size_hint: 1,1
				id: recording_layout
				spacing: 0
				padding: 0
			BoxLayout:
				size_hint: 1,1
				id: privacy_layout
			BoxLayout:
				size_hint: 1,1
				id: settings_layout
				spacing: 5
				padding: 2
                RoundedShadowButton:
                    size_hint: 1,1
					always_release: True
					on_release: app.open_auth()
                    text: 'Settings'
                    font_size: '25sp'
                    color: 'black'
                    button_color: btncol
                    button_down_color: btndowncol
                    button_radius: 10
                    bold: True
                RoundedShadowButton:
					size_hint: .765,1
					always_release: True
					on_release: app.getnetworkinfo()
                    text: 'About'
                    font_size: '25sp'
                    color: 'black'
                    button_color: btncol
                    button_down_color: btndowncol
                    button_radius: 10
                    bold: True
#				ImageButton:
#					size_hint: 1,1
#					source: app.imagepath + 'config.png'
#					upimage: app.imagepath + 'config.png'
#					downimage: app.imagepath + 'config_down.png'
