#: include libs/kvs/RoundedShadowButton.kv

#: set btntxtcol 'black'
#: set btncol (1,1,1,1)
#: set btnrad 50
#: set btnfontsize '100sp'
#: set btndowncol (247/255,142/255,48/255,1)

<Keypad>
    GridLayout:
        size_hint: None,None
        rows: 4
        cols: 3
        width: root.width
        height: root.height
        spacing: 5
        RoundedShadowButton:
            id: 1_button
            size_hint: 1,1
            text: '1'
            font_size: btnfontsize
            color: btntxtcol
            button_color: btncol
            button_down_color: btndowncol
            button_radius: btnrad
            always_release: True
            on_release: root.PressButton(self)
